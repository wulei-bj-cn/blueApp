<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blueHouse.mapper.OrderMapper">
    <select id="findOrderById" parameterType="string" resultType="com.blueHouse.pojo.orders.Order">
        select id,user_id,start_time,end_time,status from t_orders where id = #{id}
    </select>
    <select id="findOrderByPartialId" parameterType="string" resultType="com.blueHouse.pojo.orders.Order">
        select id,user_id,start_time,end_time,status from t_orders where user_id LIKE  CONCAT(CONCAT('%',#{id},'%'))
    </select>
    <select id="findAllOrders" resultType="com.blueHouse.pojo.orders.Order">
        select id,user_id,start_time,end_time,status from t_orders
    </select>
    <insert id="insertOrder" parameterType="com.blueHouse.pojo.orders.Order">
        insert t_orders(id, user_id, start_time, end_time,status ) values(#{id}, #{user_id}, #{start_time}, #{end_time},#{status})
    </insert>
    <update id="updateOrder" parameterType="com.blueHouse.pojo.orders.Order">
    </update>
</mapper>