<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blueHouse.mapper.UserMapper">
    <select id="findUserById" parameterType="int" resultType="com.blueHouse.pojo.User">
        select id, name from t_users where id = #{id}
    </select>
    <select id="findAllUsers" resultType="com.blueHouse.pojo.User">
        select id, name from t_users
    </select>
    <insert id="insertUser" parameterType="com.blueHouse.pojo.User">
        insert into t_users(id, name) values(#{id}, #{name})
    </insert>
</mapper>