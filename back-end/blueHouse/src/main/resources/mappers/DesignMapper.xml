<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blueHouse.mapper.DesignMapper">
    <select id="findDesignById" parameterType="string" resultType="com.blueHouse.pojo.orders.Design">
        select id,name,url,ts,designer from t_designs where id = #{id}
    </select>
    <select id="findDesignByUseName" parameterType="string" resultType="com.blueHouse.pojo.orders.Design">
        select id,name,url,ts,designer from t_designs where name LIKE  CONCAT(CONCAT('%',#{name},'%'))
    </select>
    <select id="finaDesignByDesignerName" parameterType="string"  resultType="com.blueHouse.pojo.orders.Design">
        select id,name,url,ts,designer from t_designs where designer LIKE  CONCAT(CONCAT('%',#{name},'%'))
    </select>
    <insert id="insertDesign" parameterType="com.blueHouse.pojo.orders.Design">
        insert into t_designs(id,name,url,ts,designer) values(#{id}, #{name}, #{url}, #{ts},#{designer})
    </insert>
    <update id="updateDesign" parameterType="com.blueHouse.pojo.orders.Design">

    </update>
</mapper>