<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blueHouse.mapper.MaterialMapper">
    <select id="finaMaterialById" parameterType="string" resultType="com.blueHouse.pojo.orders.Material">
        select id,brand,name,url,category,price from t_materials where id = #{id}
    </select>
    <select id="findMaterialByPartialName" parameterType="string" resultType="com.blueHouse.pojo.orders.Material">
        select id,brand,name,url,category,price from t_materials where name LIKE  CONCAT(CONCAT('%',#{name},'%'))
    </select>
    <select id="findAllMaterials" resultType="com.blueHouse.pojo.orders.Material">
        select id,brand,name,url,category,price from t_materials
    </select>
    <insert id="insertMaterial" parameterType="com.blueHouse.pojo.orders.Material">
        insert into t_materials(id,brand,name,url,category,price)  values(#{id}, #{brand}, #{name}, #{url},#{category},#{price})
    </insert>
    <update id="updateMaterial" parameterType="com.blueHouse.pojo.orders.Material">
        update t_materials set price = #{price} where name = #{name}
    </update>
</mapper>